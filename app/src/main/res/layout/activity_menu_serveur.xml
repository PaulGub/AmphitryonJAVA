<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Bienvenue sur votre compte serveur."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO"/>


    <Button
        android:id="@+id/buttonAjouterCommande"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Ajouter commande"
        android:textSize="15sp"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textIntro"/>

    <Button
        android:id="@+id/buttonModifierCommande"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Modifier commande"
        android:textSize="15sp"
        android:paddingHorizontal="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonAjouterCommande"
        app:layout_constraintTop_toBottomOf="@+id/buttonAjouterCommande"/>


    <Button
        android:id="@+id/buttonSupprimerCommande"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Supprimer commande"
        android:textSize="15sp"
        android:paddingHorizontal="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonModifierCommande"
        app:layout_constraintTop_toBottomOf="@+id/buttonModifierCommande"/>

    <Button
        android:id="@+id/buttonAfficherCommande"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Afficher commandes"
        android:textSize="15sp"
        android:paddingHorizontal="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonSupprimerCommande"
        app:layout_constraintTop_toBottomOf="@+id/buttonSupprimerCommande"/>

    <Button
            android:id="@+id/buttonEtatCommande"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Paiement commande"
        android:textSize="15sp"
        android:paddingHorizontal="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonAfficherCommande"
        app:layout_constraintTop_toBottomOf="@+id/buttonAfficherCommande"/>

    <Button
        android:id="@+id/buttonQuitterServeur"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Quitter"
        android:textSize="15sp"
        android:paddingHorizontal="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonEtatCommande"
        app:layout_constraintTop_toBottomOf="@+id/buttonEtatCommande"/>



</androidx.constraintlayout.widget.ConstraintLayout>